{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es6"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
